
.tocbot
  position absolute
  top 14rem
  left calc((100vw - 70rem) / 2 + 80rem)
  font-size 90%
  opacity .8
  > .toc-list
    position relative
    overflow hidden


.toc-list
  list-unstyled()
  padding-left 1.5rem


a.toc-link
  height 100%
  color sea-dark
  text-decoration none


.is-collapsible
  max-height 1000px
  overflow hidden
  transition all 300ms ease-in-out


.is-collapsed
  max-height 0


.is-position-fixed
  position fixed !important
  top 0
  right aside-width

.is-active-link
  font-weight 700
  color #5299bc !important

// Left line before pseudo element.
.toc-link::before
  background-color froth
  content ' '
  display inline-block
  height inherit
  left 0
  margin-top -1px
  position absolute
  width 2px


.is-active-link::before
  background-color sea-blue
